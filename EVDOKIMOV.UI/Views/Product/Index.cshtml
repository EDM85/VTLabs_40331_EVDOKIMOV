@model IEnumerable<EVDOKIMOV.Domain.Entities.Dish>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@{
    var categories = ViewData["Categories"] as IEnumerable<EVDOKIMOV.Domain.Entities.Category>;
}

@* <p>
    <a asp-action="Create">Create New</a>
</p> *@

<!--выпадающий список (bootstrap dropdown) меню по категориям -->
<div class="row mb-3">
    <div class="col-3">
        <ul class="nav">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle"
                   data-bs-toggle="dropdown"
                   href="#"
                   role="button">
                    @ViewData["CurrentCategory"]
                </a>

                <ul class="dropdown-menu">
                    <li>
                        <a class="dropdown-item"
                           asp-controller="Product"
                           asp-route-category="@null">
                            Все
                        </a>
                    </li>

                    @foreach (var item in (IEnumerable<EVDOKIMOV.Domain.Entities.Category>)ViewData["Categories"])
                    {
                        <li>
                            <a class="dropdown-item"
                               asp-controller="Product"
                               asp-route-category="@item.NormalizedName">
                                @item.Name
                            </a>
                        </li>
                    }
                </ul>
            </li>
        </ul>
    </div>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <img src="@item.Image" class="card-img-top" alt="@item.Name">

                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@item.Name</h5>

                    <p class="card-text">
                        @item.Description
                    </p>

                    <div class="mt-auto">
                        <a href="#" class="btn btn-primary">
                            добавить в корзину
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
