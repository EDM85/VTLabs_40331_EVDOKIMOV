@{

}
<h1>@ViewData["Greeting"]</h1>

<form method="get">
    <!-- чекбоксы -->
    <div class="form-check">
        <input class="form-check-input" type="checkbox" name="check1" id="check1" value="1">
        <label class="form-check-label" for="check1">
            Чек-бокс 1
        </label>
    </div>

    <div class="form-check mb-3">
        <input class="form-check-input" type="checkbox" name="check2" id="check2" value="1">
        <label class="form-check-label" for="check2">
            Чек-бокс 2
        </label>
    </div>

    <!-- радио-кнопки -->
    <div class="mb-3">
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="radio" id="radio1" value="1">
            <label class="form-check-label" for="radio1">Радио-1</label>
        </div>

        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="radio" id="radio2" value="2">
            <label class="form-check-label" for="radio2">Радио-2</label>
        </div>

        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="radio" id="radio3" value="3">
            <label class="form-check-label" for="radio3">Радио-3</label>
        </div>
    </div>

    <!-- логин -->
    <div class="mb-3">
        <label class="form-label">Логин:</label>
        <input type="text" class="form-control" name="login" placeholder="Введите имя">
    </div>

    <!-- пароль -->
    <div class="mb-3">
        <label class="form-label">Пароль:</label>
        <input type="password" class="form-control" name="password" placeholder="Введите пароль">
    </div>

    <button type="submit" class="btn btn-primary">Отправить</button>
</form>
